theme_void() +
theme(legend.position = "none") +
theme(ggside.panel.scale.x = 2) +
coord_fixed(ratio = .1) +
theme(plot.background = element_rect(fill = "darkgray"),
panel.background = element_rect(fill = "darkgray"))
